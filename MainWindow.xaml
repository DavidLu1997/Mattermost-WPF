<Window x:Class="Mattermost_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mattermost_WPF"
        mc:Ignorable="d"
        Title="Mattermost" Height="768" Width="1024">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="672" Margin="10,41,0,0" VerticalAlignment="Top" Width="129">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label" Content="Channels" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="26" Margin="222,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged"/>
        <Label x:Name="label1" Content="Server URL: " HorizontalAlignment="Left" Margin="144,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Go" HorizontalAlignment="Left" Margin="361,10,0,0" VerticalAlignment="Top" Width="75" Height="26"/>
        <WebBrowser HorizontalAlignment="Left" Height="672" Margin="144,41,0,0" VerticalAlignment="Top" Width="862"/>
    </Grid>
</Window>
